<h2>Confirm your account</h2>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <%= label f, :email %>
  <%= text_input f, :email, autofocus: "true", class: "form-control" %>
  <%= label f, :confirmation_code %>
  <%= text_input f, :confirmation_code, class: "form-control" %>
  <%= submit gettext("Confirm"), class: "btn btn-primary" %>
<% end %>
